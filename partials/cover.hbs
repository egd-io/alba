<div class="cover container">
    <div class="cover-content">
        {{#is "home"}}
            <div class="cover-icon">
                <picture class="cover-icon-image">
                    <source src="https://cdn.egd.io/static/img/avatar.webp" type="image/webp">
                    <source src="https://cdn.egd.io/static/img/avatar.jxr" type="image/jxr">
                    <source src="https://cdn.egd.io/static/img/avatar.jp2" type="image/jp2">
                    <source src="https://cdn.egd.io/static/img/avatar.png" type="image/png">
                    <img class="cover-icon-image" src="https://cdn.egd.io/static/img/avatar.png" alt="">
                </picture>
            </div>
            <h1>Ethan Gregory Dodge</h1>
            <div class="cover-description">{{@site.description}}</div>
            {{> cover-cta}}
        {{/is}}
        {{#page}}
            {{#has slug="surveillance"}}
                {{> cover-channel}}
                {{> cover-cta}}
            {{/has}}
            {{#has slug="commentary"}}
                {{> cover-channel}}
            {{/has}}
            {{#has slug="tech"}}
                {{> cover-channel}}
            {{/has}}
        {{/page}}
    </div>
</div>
